{% extends 'layout_books.html.twig' %}

{% block main %}
    <h1>{{ author.name }}</h1>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('author_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>

    <div class="section">
        <a href="{{ path('author_edit', { id: author.id }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>
{% endblock %}